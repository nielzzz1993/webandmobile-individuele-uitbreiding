{% extends 'base.html.twig' %}

{% block title %}Hello
  {{ user.username }}!{% endblock %}

{% block body %}

  <div class="container">
    <h1>Hello
      {{ user.username }}!</h1>

    {% if is_granted('ROLE_TEST') %}
      <ul class="nav nav-pills">
        <li class="active">
          <a href="#manage-moderators" data-toggle="tab">Manage moderators</a>
        </li>
        <li>
          <a href="#manage-posters" data-toggle="tab">Manage posters</a>
        </li>
      </ul>

      <div class="tab-content clearfix">
        <div class="tab-pane active" id="manage-moderators">
          <h3>Manage moderators</h3>
        </div>
        <div class="row">
          <div class="col-6">
            name
          </div>
          <div class="col">
            <button type="button" class="btn btn-primary">Edit</button>
          </div>
          <div class="col">
            <button type="button" class="btn btn-primary">Remove</button>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="manage-posters">
        <h3>Manage posters</h3>
        <div class="row">
          <div class="col-6">
            name
          </div>
          <div class="col">
            <button type="button" class="btn btn-primary">Edit</button>
          </div>
          <div class="col">
            <button type="button" class="btn btn-primary">Remove</button>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
{% endblock %}
